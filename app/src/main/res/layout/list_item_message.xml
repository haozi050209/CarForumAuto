<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_img_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/message_titel_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_balank"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/message_time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_balank"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/message_content_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_titel_item"
                android:layout_marginTop="8dp"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/message_count"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/message_time_item"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_circular"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_white"
                android:textSize="12.0sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
