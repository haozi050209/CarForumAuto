<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/qa_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/qa_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nihao"
                    android:textColor="@color/color_balank"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/qa_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="¥20"
                    android:textColor="@color/brown"
                    android:textSize="16.0sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/qa_zy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="nihao"
                android:textColor="@color/brown"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/qa_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="大开提问"
                android:textSize="14.0sp" />


            <TextView
                android:id="@+id/qa_daan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/ic_jiantou"
                android:text="已解答了3个答案可以免费查看"
                android:textSize="14.0sp"
                android:visibility="visible" />


            <RelativeLayout
                android:id="@+id/dakai_fufei_ray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/qa_xx_lay"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/qabj"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/qa_xx_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/qa"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:text="支付学习下"
                        android:textColor="@color/color_white"
                        android:textSize="14.0sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/big_anwers_zhifu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/qabj"
                    android:drawableLeft="@drawable/qa"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="立即查看"
                    android:textColor="@color/color_white"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/qa_numer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/kj"
                    android:drawablePadding="10dp"
                    android:text="120"

                    android:textColor="@color/color_gray3"
                    android:textSize="16.0sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_divider_out" />

    <RelativeLayout
        android:id="@+id/qa_ck_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="查看更多问答"
            android:textColor="@color/color_red"
            android:textSize="16.0sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/btn_jt3x" />
    </RelativeLayout>

</LinearLayout>
