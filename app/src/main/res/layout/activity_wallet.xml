<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wallet_jb_ray"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_jbgroup"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:text="我的金币"
                android:textColor="@color/color_title_main"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/wallet_jb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/btn_jt3x"
                android:paddingRight="10dp"
                android:textColor="@color/color_title_main"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray1"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/wallet_cfz_ray"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_cfz"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:text="我的财富值"
                android:textColor="@color/color_title_main"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/wallet_cfz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/btn_jt3x"
                android:paddingRight="10dp"
                android:textColor="@color/color_title_main"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_gray2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="礼品兑换中心"
            android:textColor="@color/color_title_main"
            android:textSize="18.0sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/wallet_jl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/color_gray3"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/wallet_jl_ray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/btn_jt3x"
                android:paddingRight="10dp"
                android:text="查看记录"
                android:textColor="@color/color_gray3"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_text_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂时还没有可兑换礼品哦"
                android:textSize="16.0sp"
                android:visibility="gone" />

            <GridView
                android:id="@+id/wallet_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="2" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
