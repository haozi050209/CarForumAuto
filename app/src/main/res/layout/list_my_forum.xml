<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/my_forum_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/my_forum_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_balank"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/my_forum_item_foollow"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_follow_garly"
                android:gravity="center"
                android:text="已关注"
                android:textColor="@color/color_gray3"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/my_forum_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_forum_item_title"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_balank"
                android:textSize="14.0sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
