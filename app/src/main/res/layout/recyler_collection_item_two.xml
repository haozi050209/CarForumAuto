<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--单图-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/collection_lable_two"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@color/color_yellow"
                    android:gravity="center"
                    android:text="精华"
                    android:textColor="@color/color_white"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/collection_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="dsjkfhksdfhsdkf"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/collection_source_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源售后论坛"
                    android:textSize="15.0sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/collection_tiem_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="10分钟前"
                        android:textSize="15.0sp" />
                    <TextView
                        android:id="@+id/collection_number_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:gravity="right"
                        android:text="浏览：89000"
                        android:textSize="15.0sp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/img13x" />


    </LinearLayout>


</LinearLayout>
