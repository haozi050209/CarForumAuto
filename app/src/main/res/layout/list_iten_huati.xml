<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/huati_item_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_follow_red"
            android:padding="3dp"
            android:text="热"
            android:textColor="@color/color_white"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/huati_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/huati_item_lable"
            android:text="新车该怎么保养"
            android:textColor="@color/color_balank"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/huati_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="23万人参加"
            android:textColor="@color/color_gray3"
            android:textSize="16.0sp" />


    </RelativeLayout>


</LinearLayout>
