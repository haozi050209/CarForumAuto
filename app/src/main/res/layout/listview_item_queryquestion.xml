<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_infoccRdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="问题编号：RX20003123241"
        android:textColor="#3A3A3A"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_recordContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="问题描述：填写工单出现了页面报错，报错提示为
                      error"
        android:textColor="#3A3A3A"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_lastSolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="解决方案：重新启动系统即可"
        android:textColor="#3A3A3A"
        android:textSize="14dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="解决状态：待评价"
            android:textColor="#3A3A3A"
            android:textSize="14dp"/>
        
        <TextView
            android:id="@+id/tv_cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/shape_wycd"
            android:visibility="gone"
            android:text="我要催单"
            android:textColor="#FFE45751"
            android:textSize="13dp"/>
        
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/kf"/>
    </RelativeLayout>
</LinearLayout>